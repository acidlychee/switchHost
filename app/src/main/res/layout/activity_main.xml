<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fff1e5bb"
        android:orientation="horizontal">

        <Button
            android:id="@+id/switchToPreview"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_preview"
            android:text="@string/button_switch_to_preview"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


        <Button
            android:id="@+id/switchToProduction"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_production"
            android:text="@string/button_switch_to_production"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/switchToStaging"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_staging"
            android:text="@string/button_switch_to_staging"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/hostTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f1efed"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/text_current_hosts"
        android:textColor="#606060"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/currentHostText"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#ffffffff"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:textColor="@drawable/textselector"
        android:textSize="15sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />


    <TextView
        android:id="@+id/right"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:background="#f1efed"
        android:gravity="center"
        android:text="@string/text_buttom"
        android:textAllCaps="true"
        android:textColor="#CCCCCC"
        android:textSize="15sp" />
</LinearLayout>
